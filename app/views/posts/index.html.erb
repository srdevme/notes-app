<%= render 'partials/header', title: 'Posts | Rails Posts App' %>

<h1>All Posts</h1>

<% @posts.each do |el| %>
    <h2><%= link_to el.title, show_post_path(el.id) %></h2>
    <p><%= el.content %></p>
    <small><%= el.created_at %></small>
    <p>
        <%= link_to "Edit", edit_post_path(el.id) %>
        <%= link_to "Delete", delete_post_path(el.id), :data => { :confirm => "Are you sure?" }, :method => :delete %>
    </p>
    <hr />
<% end %>

<p><%= link_to "Add A New Post", new_post_path %></p>
